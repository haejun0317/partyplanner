<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="kr.co.partyplanner.mapper.StageMapper">
	<select id="listAll" resultType="Stage">
		SELECT NAME, 
		       price, 
		       profile 
		FROM   stage
		ORDER  BY price
	</select>
	
	<select id="read" resultType="Stage">
		SELECT NAME, 
		       price,
		       profile 
		FROM   stage
		WHERE  NAME = #{value}
		ORDER  BY price
	</select>
</mapper>